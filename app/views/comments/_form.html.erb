<%= form_for([@post, @post.comments.build]) do |form| %>
  <div>
    <%= form.label :body, style: "display: block" %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.submit %>
  </div>

  <%= form.collection_select :project_id, current_user.projects.order(:name), :id, :name, include_blank: true %>
<% end %>